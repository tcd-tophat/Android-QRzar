<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradient_background" 
    android:orientation="vertical" >
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView 
            android:contentDescription="@string/logo_description"
            android:src="@drawable/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
        />
        
    </FrameLayout>
    
    <ImageView 
        android:src="@drawable/redbanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_marginBottom="10dp" 
    />
    <LinearLayout  
        android:baselineAligned="false"
        android:id="@+id/linearLayout1" 
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal" 
        android:layout_width="match_parent">
        
        <FrameLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        	
        	<LinearLayout 
            	android:orientation="vertical"
            	android:layout_height="wrap_content"
            	android:layout_width="wrap_content"
            	android:layout_gravity="center">
            	
            	<Button 
        	    	android:layout_height="wrap_content" 
        	    	android:layout_width="wrap_content" 
        	    	android:onClick="showRanks" 
        	    	android:background="@drawable/rank_button" 
        	    	android:text="@string/empty" 
        	    	android:id="@+id/rank_button" 
        	    />
            	
            	<FrameLayout 
                	android:layout_width="fill_parent"
                	android:layout_height="wrap_content" >
                	
                	<TextView 
                	    android:textColor="#aaa6b1"
                	    android:layout_margin="5dp" 
                		android:gravity="center"
                		android:text="@string/rank" 
                		android:layout_width="fill_parent"
                		android:layout_height="wrap_content" 
                		android:textSize="20dp"
                	/>
                	
            	</FrameLayout>
            
        	</LinearLayout>
        	
        </FrameLayout>
        	
        <FrameLayout 
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:layout_height="match_parent">
        	
        	<LinearLayout
        	    android:baselineAligned="false"
            	android:orientation="vertical"
            	android:layout_height="wrap_content"
            	android:layout_width="wrap_content"
            	android:layout_gravity="center">
            	
            	<Button 
        	    	android:layout_height="wrap_content" 
        	    	android:layout_width="wrap_content" 
        	    	android:onClick="joinGame" 
        	    	android:background="@drawable/join_button" 
        	    	android:text="@string/empty" 
        	    	android:id="@+id/join_button" 
        	    />
            	
            	<FrameLayout 
                	android:layout_width="fill_parent"
                	android:layout_height="wrap_content" >
                	
                	<TextView 
                	    android:textColor="#aaa6b1"
                	    android:layout_margin="5dp" 
                		android:gravity="center"
                		android:text="@string/play" 
                		android:layout_width="fill_parent"
                		android:layout_height="wrap_content" 
                		android:textSize="20dp"
                	/>
                	
            	</FrameLayout>
            
        	</LinearLayout>
        	
        </FrameLayout>
        <FrameLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        	
        	<LinearLayout
            	android:orientation="vertical"
            	android:layout_height="wrap_content"
            	android:layout_width="wrap_content"
            	android:layout_gravity="center">
            	
            	<Button 
        	    	android:layout_height="wrap_content" 
        	    	android:layout_width="wrap_content" 
        	    	android:onClick="showInfo" 
        	    	android:background="@drawable/info_button" 
        	    	android:text="@string/empty" 
        	    	android:id="@+id/info_button" 
        	    />
            	
            	<FrameLayout 
                	android:layout_width="fill_parent"
                	android:layout_height="wrap_content" >
                	
                	<TextView
                	    android:layout_width="fill_parent"
                	    android:layout_height="wrap_content"
                	    android:layout_margin="5dp"
                	    android:gravity="center"
                	    android:text="@string/info"
                	    android:textColor="#aaa6b1"
                	    android:textSize="20dp" />
                	
            	</FrameLayout>
            
        	</LinearLayout>
        	
        </FrameLayout>
    </LinearLayout>
</LinearLayout>